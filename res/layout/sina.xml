<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:background="#60000000" 
    android:padding="0.0dip" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <ImageView 
	android:id="@+id/ivNavigater_ltop" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:src="@drawable/begin_left_top" 
	android:layout_marginLeft="18dp"
	android:layout_marginTop="25dp" />
    
    <ImageView 
	android:id="@+id/ivNavigater_rtop" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:src="@drawable/begin_right_top" 
	android:layout_marginRight="15dp"
	android:layout_marginTop="25dp" 
	android:layout_alignParentRight="true"/>
    
    <ImageView 
        android:name="text"
        android:id="@+id/ivNavigater_clickable" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:src="@drawable/center_iknown" 
        android:layout_alignParentBottom="true" 
        android:layout_marginBottom="25dp" 
        android:layout_centerInParent="true" />  
</RelativeLayout>
